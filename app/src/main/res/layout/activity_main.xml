<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/back2">

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:id="@+id/one"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        android:background="#76c1e9"
        android:layout_above="@+id/five"
        android:layout_toLeftOf="@+id/two"
        android:layout_toStartOf="@+id/two"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="2"
        android:id="@+id/two"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        android:background="#fe0000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="3"
        android:id="@+id/three"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        android:background="#ff7d03"
        android:layout_alignTop="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="4"
        android:id="@+id/four"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        android:background="#fcf009"
        android:layout_below="@+id/one"
        android:layout_alignLeft="@+id/one"
        android:layout_alignStart="@+id/one"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="5"
        android:id="@+id/five"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        android:background="#73fa05"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="6"
        android:id="@+id/six"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        android:background="#0d48fa"
        android:layout_below="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="7"
        android:id="@+id/seven"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        android:background="#e576e9"
        android:layout_below="@+id/four"
        android:layout_alignLeft="@+id/four"
        android:layout_alignStart="@+id/four"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="8"
        android:id="@+id/eight"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        android:background="#b976e9"
        android:layout_below="@+id/five"
        android:layout_alignLeft="@+id/five"
        android:layout_alignStart="@+id/five"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="0"
        android:id="@+id/zero"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="50dp"
        android:background="#c7c4c4"
        android:layout_alignTop="@+id/eight"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <Chronometer
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/chronometer"
        android:layout_marginTop="42dp"
        android:textSize="35dp"
        android:layout_below="@+id/eight"
        android:layout_alignRight="@+id/zero"
        android:layout_alignEnd="@+id/zero"
        android:layout_alignLeft="@+id/eight"
        android:layout_alignStart="@+id/eight"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/textView3"
        android:textSize="35dp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/chronometer"
        android:layout_alignLeft="@+id/seven"
        android:layout_alignStart="@+id/seven" />
</RelativeLayout>
